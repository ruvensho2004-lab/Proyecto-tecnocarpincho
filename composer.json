{
    "name": "sistema-academico/liceo",
    "description": "Sistema de Gestión Académica para Liceos - Plataforma web integral para la administración de instituciones educativas",
    "type": "project",
    "keywords": [
        "sistema academico",
        "gestion escolar",
        "liceo",
        "educacion",
        "notas",
        "calificaciones",
        "php",
        "mysql"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ruben Felipe Lara Urbina",
            "email": "Ruvensho2004@gmail.com",
            "role": "Desarrollador"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=PSR12 includes/",
        "fix-style": "phpcbf --standard=PSR12 includes/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
